generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppRole {
  ADMIN
  PM
  VIEWER
  FINANCE
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  fullName     String
  passwordHash String
  appRole      AppRole
  activeWorkspaceId String?
  activeWorkspace   Workspace? @relation("UserActiveWorkspace", fields: [activeWorkspaceId], references: [id], onDelete: SetNull)
  ownedWorkspaces   Workspace[] @relation("WorkspaceOwner")
  ownedCompanies    Company[] @relation("CompanyOwner")
  workspaceMemberships WorkspaceMember[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([activeWorkspaceId])
}

model Workspace {
  id         String   @id @default(cuid())
  name       String
  ownerUserId String
  companyId  String?
  owner      User     @relation("WorkspaceOwner", fields: [ownerUserId], references: [id], onDelete: Restrict)
  company    Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  members    WorkspaceMember[]
  activeUsers User[]  @relation("UserActiveWorkspace")
  employees  Employee[]
  projects   Project[]
  vacations  Vacation[]
  costRates  CostRate[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([ownerUserId])
  @@index([companyId])
}

model Company {
  id         String      @id @default(cuid())
  name       String
  ownerUserId String
  owner      User        @relation("CompanyOwner", fields: [ownerUserId], references: [id], onDelete: Restrict)
  workspaces Workspace[]
  roles      Role[]
  departments Department[]
  grades     Grade[]
  teamTemplates ProjectTeamTemplate[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([ownerUserId])
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  role        AppRole  @default(VIEWER)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
}

model Role {
  id          String   @id @default(cuid())
  companyId   String?
  company     Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  name        String
  shortName   String?  @db.VarChar(20)
  description String?
  level       Int?
  colorHex    String?  @db.VarChar(7)
  employees   Employee[]
  costRates   CostRate[]
  templateRoles ProjectTeamTemplateRole[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([companyId, name])
  @@index([companyId])
}

model Department {
  id          String     @id @default(cuid())
  companyId   String?
  company     Company?   @relation(fields: [companyId], references: [id], onDelete: SetNull)
  name        String
  description String?
  colorHex    String?    @db.VarChar(7)
  employees   Employee[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([companyId, name])
  @@index([companyId])
}

model Grade {
  id        String   @id @default(cuid())
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  name      String
  colorHex  String?  @db.VarChar(7)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, name])
  @@index([companyId])
}

model Employee {
  id                         String   @id @default(cuid())
  workspaceId                String
  workspace                  Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  fullName                   String
  email                      String
  grade                      String?
  status                     String   @default("active")
  defaultCapacityHoursPerDay Decimal  @default(8.0) @db.Decimal(4, 2)
  roleId                     String
  role                       Role     @relation(fields: [roleId], references: [id], onDelete: Restrict)
  departmentId               String?
  department                 Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  assignments                ProjectAssignment[]
  projectMembers             ProjectMember[]
  vacations                  Vacation[]
  skills                     EmployeeSkill[]
  costRates                  CostRate[]
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt

  @@unique([workspaceId, email])
  @@index([workspaceId])
}

model CostRate {
  id            String    @id @default(cuid())
  workspaceId   String
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  employeeId    String?
  roleId        String?
  amountPerHour Decimal   @db.Decimal(10, 2)
  currency      String    @default("USD")
  validFrom     DateTime
  validTo       DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  employee Employee? @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  role     Role?     @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@index([workspaceId, employeeId, validFrom])
  @@index([workspaceId, roleId, validFrom])
}

model Skill {
  id          String          @id @default(cuid())
  name        String          @unique
  description String?
  employees   EmployeeSkill[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model EmployeeSkill {
  employeeId String
  skillId    String
  level      Int?
  createdAt  DateTime @default(now())

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  skill    Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([employeeId, skillId])
  @@index([skillId])
}

model Project {
  id          String              @id @default(cuid())
  workspaceId String
  workspace   Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  code        String
  name        String
  description String?
  status      String              @default("planned")
  priority    Int                 @default(3)
  startDate   DateTime
  endDate     DateTime
  links       Json?
  teamTemplateId String?
  teamTemplate ProjectTeamTemplate? @relation(fields: [teamTemplateId], references: [id], onDelete: SetNull)
  assignments ProjectAssignment[]
  members     ProjectMember[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([teamTemplateId])
  @@unique([workspaceId, code])
  @@index([workspaceId])
}

model ProjectTeamTemplate {
  id        String                    @id @default(cuid())
  companyId String?
  company   Company?                  @relation(fields: [companyId], references: [id], onDelete: SetNull)
  name      String
  roles     ProjectTeamTemplateRole[]
  projects  Project[]
  createdAt DateTime                  @default(now())
  updatedAt DateTime                  @updatedAt

  @@unique([companyId, name])
  @@index([companyId])
}

model ProjectTeamTemplateRole {
  id         String              @id @default(cuid())
  templateId String
  roleId     String
  position   Int                 @default(0)
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt

  template ProjectTeamTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  role     Role                @relation(fields: [roleId], references: [id], onDelete: Restrict)

  @@unique([templateId, roleId])
  @@index([templateId, position])
  @@index([roleId])
}

model ProjectMember {
  id          String   @id @default(cuid())
  projectId   String
  employeeId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Restrict)

  @@unique([projectId, employeeId])
  @@index([projectId])
  @@index([employeeId])
}

model ProjectAssignment {
  id                  String   @id @default(cuid())
  projectId           String
  employeeId          String
  assignmentStartDate DateTime
  assignmentEndDate   DateTime
  allocationPercent   Decimal  @default(100) @db.Decimal(5, 2)
  loadProfile         Json?
  plannedHoursPerDay  Decimal? @db.Decimal(4, 2)
  roleOnProject       String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Restrict)

  @@unique([projectId, employeeId])
  @@index([projectId, assignmentStartDate, assignmentEndDate])
  @@index([employeeId, assignmentStartDate, assignmentEndDate])
}

model Vacation {
  id        String   @id @default(cuid())
  workspaceId String
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  employeeId String
  startDate DateTime
  endDate   DateTime
  type      String   @default("vacation")
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([workspaceId, startDate, endDate])
  @@index([employeeId, startDate, endDate])
}

model CalendarDay {
  date           DateTime @id @db.Date
  isWeekend      Boolean
  isHoliday      Boolean
  isWorkingDay   Boolean
  holidayName    String?
  sourceYear     Int
  sourceSyncedAt DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([sourceYear])
  @@index([isHoliday, isWorkingDay])
}

model CalendarYearSync {
  year          Int      @id
  lastAttemptAt DateTime?
  lastSuccessAt DateTime?
  lastStatus    String   @default("idle")
  lastError     String?
  updatedAt     DateTime @updatedAt
}