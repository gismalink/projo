{
  "name": "projo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @projo/api",
    "dev:all": "npm run dev --workspaces --if-present --parallel",
    "dev:api": "npm run dev -w @projo/api",
    "dev:web": "npm run dev -w @projo/web",
    "build": "npm run build -ws",
    "lint": "npm run lint -ws",
    "test": "npm run test -ws",
    "test:e2e:api": "node --test ./scripts/e2e-api-smoke.test.mjs",
    "verify": "bash ./scripts/verify-all.sh",
    "ci:check": "npm run verify"
  }
}
