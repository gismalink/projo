{
  "name": "projo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @projo/api",
    "dev:all": "npm run dev --workspaces --if-present --parallel",
    "predev:api": "node ./scripts/kill-port-4000.mjs",
    "dev:api": "npm run dev -w @projo/api",
    "dev:web": "npm run dev -w @projo/web",
    "build": "npm run build -ws",
    "lint": "npm run lint -ws",
    "test": "npm run test -ws",
    "audit:api": "npm audit -w @projo/api --omit=dev --audit-level=high",
    "audit": "npm run audit:api",
    "seed:salaries": "node ./scripts/seed-employee-salaries.mjs",
    "test:e2e:api": "node --test ./scripts/e2e-api-smoke.test.mjs",
    "deploy:test": "bash ./scripts/examples/deploy-test-from-ref.sh \"${TEST_REF:-projo/master}\" \"${REPO_DIR:-$HOME/projo}\"",
    "deploy:prod": "bash ./scripts/examples/deploy-prod-from-ref.sh \"${PROD_REF:-projo/master}\" \"${REPO_DIR:-$HOME/projo}\"",
    "check": "bash ./scripts/verify-all.sh",
    "ci": "npm run check"
  }
}
